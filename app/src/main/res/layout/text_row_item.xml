
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"


    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

   >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/a"

        android:background="#ffffff">


        <TextView
            android:id="@+id/date"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_detail"
            android:padding="8dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/date"


            android:paddingTop="8dp"

            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_alignParentLeft="false"
            android:layout_alignParentBottom="false"
            android:layout_alignParentEnd="true"
            android:paddingRight="8dp" />

        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"

            android:textColor="#222"
            android:textSize="18sp"

            android:layout_toEndOf="@+id/item_thumbnail"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/item_thumbnail"
            android:layout_alignParentTop="true" />

        <ImageView
            android:paddingTop="16dp"
            android:id="@+id/item_thumbnail"

            android:scaleType="centerCrop"

            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="16dp"
            android:layout_width="150dp"
            android:layout_height="150dp" />

        <TextView
            android:id="@+id/item_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_toEndOf="@+id/item_thumbnail"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/item_thumbnail"

            android:textColor="#666"
            android:textSize="17sp"
            android:text="بھارت کوپاکستان فوبیا ہوگیا ہے،وہ ہر حملے کا ذمہ دار پاکستان کو قرار دیتا ہےمگرمجال ہےکہ ایک الزام کو بھی ثابت کرسکاہو"
            tools:text="بھارت کوپاکستان فوبیا ہوگیا ہے،وہ ہر حملے کا ذمہ دار پاکستان کو قرار دیتا ہےمگرمجال ہےکہ ایک الزام کو بھی ثابت کرسکاہو"

            android:layout_below="@+id/item_title"
            android:lines="2"
            android:paddingRight="8dp" />


    </RelativeLayout>


</android.support.v7.widget.CardView>

